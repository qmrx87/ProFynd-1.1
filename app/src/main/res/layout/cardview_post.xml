<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/formation_post"
    android:clickable="true"
    app:cardCornerRadius="14dp"
    app:cardMaxElevation="3dp"
    app:cardElevation="3dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    android:layout_marginBottom="15dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/formation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_sb"
                    android:text="Formation"
                    android:textColor="@color/PrimCol"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                />

                <TextView
                    android:id="@+id/usernamep"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Teacher"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_sb"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000Da"
                    android:textSize="16dp"
                    android:layout_gravity="end"
                    android:textColor="@color/PrimCol"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_sb"/>
                <TextView
                    android:id="@+id/formation_localisation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oran, Algeria"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_gravity="end"
                    android:fontFamily="@font/poppins_light"/>



            </LinearLayout>

            <ImageButton

                android:id="@+id/questionMenuBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:background="@null"
                android:src="@drawable/ic_post_menu" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>