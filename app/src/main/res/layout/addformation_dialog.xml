<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_sb"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Please Select the type of the formation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/formation_type"
        android:layout_below="@id/dialog_txt"
        android:gravity="center_horizontal">

        <com.google.android.material.chip.ChipGroup

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collective"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Individual"/>

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@id/formation_type"
        android:layout_marginBottom="32dp"

        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/available_places"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Available Places"
                android:inputType="number"
                android:maxLength="3"
                android:clickable="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/add_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_backround"
            android:padding="18dp"
            android:text="Add Image"
            style="@style/clickedButton"
            />

    </LinearLayout>

</RelativeLayout>