<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SecondCol">
<ImageView
    android:id="@+id/splash_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/splash_grouo"/>


    <Button
        android:id="@+id/login_lay"
        style="@style/Text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_group"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/button_backround"
        android:text="Log in"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/reg_lay"
        style="@style/Text2"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_lay"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/button_backround"
        android:text="Sign in"/>




</RelativeLayout>