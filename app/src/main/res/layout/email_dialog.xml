<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_sb"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="" />



    <ProgressBar
        android:id="@+id/progressbarokay1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_txt"
        android:indeterminateDrawable="@drawable/custom_progress_bar"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/copy"
        style="@style/clickedButton"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/progressbarokay1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_backround"
        android:padding="18dp"
        android:text="COPY" />

</RelativeLayout>